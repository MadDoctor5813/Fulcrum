<Window x:Class="Fulcrum.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fulcrum"
        mc:Ignorable="d"
        Title="CreateProgressDialog" Width="300" Height="105.5">
    <Grid Height="72" VerticalAlignment="Top">
        <ProgressBar x:Name="progBar" Margin="10,40,10,0" IsIndeterminate="False" Height="20" VerticalAlignment="Top"/>
        <Label x:Name="progLabel" Content="Label" Margin="10,10,10,32" VerticalContentAlignment="Bottom"/>

    </Grid>
</Window>
